<h2>Please enter your details.</h2>

<div class="container">
<%= form_for @user_account, class: "form-horizontal" do |f| %>
  <div class="row">
      <label class="col-sm-2 control-label">First Name:</label>
      <div class="col-sm-10">
        <%=f.text_field :firstname, class: "form-control input-md" %>
      </div>
  </div>
  <div class="row">
    <label class="col-sm-2 control-label">Last Name:</label>
    <div class="col-sm-10">
      <%=f.text_field :lastname, class: "form-control input-md" %>
    </div>
  </div>
  <div class="row">
    <label class="col-sm-2 control-label">Email Address:</label>
    <div class="col-sm-10">
      <%=f.text_field :email, class: "form-control input-md" %>
    </div>
  </div>
  <div class="row">
    <label class="col-sm-2 control-label">Password:</label>
    <div class="col-sm-10">
      <%=f.password_field :password, class: "form-control input-md" %>
    </div>
  </div>
  <div class="row">
    <label class="col-sm-2 control-label">Password Confirmation:</label>
    <div class="col-sm-10">
      <%=f.password_field :password_confirmation, class: "form-control input-md" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Save" %>
    </div>
  </div>
<% end %>
</div>

<% if @user_account.errors.any? %>
<br>
  <div id="error_explanation" class="alert alert-danger" align="left">
  <%= pluralize(@user_account.errors.count, "error") %>
  <ul>
    <% @user_account.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  </div>
<% end %>
