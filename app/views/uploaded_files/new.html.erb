<h1>File Upload</h1>

<br>
<%= form_for [@user_account, @uploaded_file], :html => {:multipart => true} do |f| %>
  <div class="form-group">
    <%= label_tag :select, "Select file:", for: "file_to_upload", class: "sr-only" %>
    <%= f.file_field :file_to_upload %>
  </div>
  <div class="form-group">
    <label>Description:</label>
    <%= f.text_area :description, {:rows=>2, :maxlength=>'140', :class=>'form-control'} %>
  </div>
  <div class="form-group">
    <%= submit_tag "Upload" %>
  </div>
<% end %>

<br>
<% if @uploaded_file.errors.any? %>
  <div id="error_explanation" class="alert alert-danger" align="left">
  <%= pluralize(@uploaded_file.errors.count, "error") %>
    prohibited this file from being saved:
  <ul>
  <% @uploaded_file.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>

<p><%= link_to "Back", user_account_uploaded_files_path(@user_account) %></p>
